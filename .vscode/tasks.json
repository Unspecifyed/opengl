{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build OpenGL project",
            "command": "/usr/bin/g++",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lGL",        // Link OpenGL library
                "-lglfw",      // Link GLFW library (assuming you're using GLFW)
                "-lGLEW",       // Link GLEW library if needed
                "-I/usr/local/include"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}
